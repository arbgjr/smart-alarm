# Configurações de Ambiente para Produção - Smart Alarm
# Arquivo: .env.production

# ==============================================
# OCI (Oracle Cloud Infrastructure) Configuration
# ==============================================

# Object Storage Configuration
OCI_OBJECT_STORAGE_NAMESPACE=your_oci_namespace
OCI_OBJECT_STORAGE_BUCKET_NAME=smartalarm-storage
OCI_OBJECT_STORAGE_REGION=us-ashburn-1

# Streaming Configuration  
OCI_STREAMING_STREAM_OCID=your_stream_ocid
OCI_STREAMING_ENDPOINT=your_streaming_endpoint
OCI_STREAMING_PARTITION_KEY=smart-alarm

# Vault Configuration
OCI_VAULT_ID=your_vault_id
OCI_COMPARTMENT_ID=your_compartment_id
OCI_REGION=us-ashburn-1
OCI_TENANCY_ID=your_tenancy_id
OCI_USER_ID=your_user_id

# ==============================================
# JWT Configuration
# ==============================================

# JWT Settings for Production
JWT_SECRET_KEY=your_production_jwt_secret_key_here_min_32_chars
JWT_ISSUER=SmartAlarm
JWT_AUDIENCE=SmartAlarm.IntegrationService
JWT_EXPIRATION_MINUTES=60

# ==============================================
# External APIs Configuration
# ==============================================

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Microsoft Graph API (Outlook)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id
MICROSOFT_REDIRECT_URI=https://yourdomain.com/auth/microsoft/callback

# Apple Calendar API
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=/path/to/apple/private/key.p8

# ==============================================
# Database Configuration
# ==============================================

# Production Database
DATABASE_CONNECTION_STRING=your_production_database_connection_string
DATABASE_PROVIDER=PostgreSQL
DATABASE_TIMEOUT=30

# ==============================================
# Monitoring & Observability
# ==============================================

# Application Insights / Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your_application_insights_connection_string
MONITORING_ENABLED=true
TELEMETRY_ENDPOINT=https://your-telemetry-endpoint.com

# ==============================================
# Security Configuration
# ==============================================

# HTTPS Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80
ASPNETCORE_HTTPS_PORT=443

# CORS Settings  
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ==============================================
# Service Configuration
# ==============================================

# Smart Alarm Services
ALARM_SERVICE_URL=https://alarm-service.yourdomain.com
AI_SERVICE_URL=https://ai-service.yourdomain.com
INTEGRATION_SERVICE_URL=https://integration-service.yourdomain.com

# ==============================================
# Azure Configuration (if using Azure services)
# ==============================================

# Azure Storage (alternative to OCI)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=smartalarm-files

# Azure Service Bus (alternative to OCI Streaming)
AZURE_SERVICE_BUS_CONNECTION_STRING=your_azure_service_bus_connection_string

# Azure Key Vault (alternative to OCI Vault)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ==============================================
# Logging Configuration
# ==============================================

# Structured Logging
SERILOG_MINIMUM_LEVEL=Information
SERILOG_WRITE_TO_CONSOLE=true
SERILOG_WRITE_TO_FILE=true
SERILOG_FILE_PATH=./logs/smartalarm-.log
SERILOG_ROLLING_INTERVAL=Day

# ==============================================
# Performance Configuration
# ==============================================

# Connection Pooling
CONNECTION_POOL_MAX_SIZE=100
CONNECTION_POOL_MIN_SIZE=5

# HTTP Client Configuration
HTTP_CLIENT_TIMEOUT_SECONDS=30
HTTP_CLIENT_RETRY_COUNT=3
HTTP_CLIENT_RETRY_DELAY_SECONDS=2

# ==============================================
# Feature Flags
# ==============================================

# Enable/Disable Features
FEATURE_EXTERNAL_CALENDAR_SYNC=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_MONITORING=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
