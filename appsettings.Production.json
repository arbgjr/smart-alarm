{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "SmartAlarm": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:localhost};Port=${DB_PORT:5432};Database=${DB_NAME:smartalarm};Username=${DB_USER:postgres};Password=${DB_PASSWORD}",
    "Redis": "${REDIS_CONNECTION_STRING:localhost:6379}"
  },
  "JWT": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:SmartAlarm}",
    "Audience": "${JWT_AUDIENCE:SmartAlarm.Api}",
    "ExpirationMinutes": "${JWT_EXPIRATION_MINUTES:60}",
    "RefreshTokenExpirationDays": "${JWT_REFRESH_TOKEN_EXPIRATION_DAYS:7}"
  },
  "OCI": {
    "ObjectStorage": {
      "Namespace": "${OCI_OBJECT_STORAGE_NAMESPACE}",
      "BucketName": "${OCI_OBJECT_STORAGE_BUCKET_NAME}",
      "Region": "${OCI_REGION:us-ashburn-1}"
    },
    "Streaming": {
      "StreamOcid": "${OCI_STREAMING_STREAM_OCID}",
      "PartitionKey": "${OCI_STREAMING_PARTITION_KEY:smart-alarm}",
      "Endpoint": "${OCI_STREAMING_ENDPOINT}"
    },
    "Vault": {
      "VaultId": "${OCI_VAULT_ID}",
      "CompartmentId": "${OCI_COMPARTMENT_ID}"
    }
  },
  "Azure": {
    "KeyVault": {
      "Uri": "${AZURE_KEYVAULT_URI}"
    }
  },
  "AWS": {
    "Region": "${AWS_REGION:us-east-1}"
  },
  "RabbitMQ": {
    "HostName": "${RABBITMQ_HOST:localhost}",
    "Port": "${RABBITMQ_PORT:5672}",
    "UserName": "${RABBITMQ_USER:guest}",
    "Password": "${RABBITMQ_PASSWORD:guest}",
    "VirtualHost": "${RABBITMQ_VHOST:/}"
  },
  "MinIO": {
    "Endpoint": "${MINIO_ENDPOINT:localhost:9000}",
    "AccessKey": "${MINIO_ACCESS_KEY}",
    "SecretKey": "${MINIO_SECRET_KEY}",
    "BucketName": "${MINIO_BUCKET_NAME:smartalarm}",
    "UseSSL": "${MINIO_USE_SSL:false}"
  },
  "Observability": {
    "ServiceName": "SmartAlarm.Api",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "${OTLP_ENDPOINT:http://localhost:4317}",
    "EnableTracing": "${ENABLE_TRACING:true}",
    "EnableMetrics": "${ENABLE_METRICS:true}",
    "EnableLogging": "${ENABLE_LOGGING:true}",
    "JaegerEndpoint": "${JAEGER_ENDPOINT:http://localhost:14268/api/traces}",
    "PrometheusEndpoint": "${PROMETHEUS_ENDPOINT:http://localhost:9090}"
  },
  "ExternalAPIs": {
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET}",
      "RedirectUri": "${GOOGLE_REDIRECT_URI}"
    },
    "Microsoft": {
      "ClientId": "${MICROSOFT_CLIENT_ID}",
      "ClientSecret": "${MICROSOFT_CLIENT_SECRET}",
      "TenantId": "${MICROSOFT_TENANT_ID}",
      "RedirectUri": "${MICROSOFT_REDIRECT_URI}"
    },
    "HolidayAPI": {
      "ApiKey": "${HOLIDAY_API_KEY}",
      "BaseUrl": "${HOLIDAY_API_URL:https://holidays.abstractapi.com/v1/}"
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "TimeoutSeconds": 30,
    "Checks": {
      "Database": true,
      "Storage": true,
      "KeyVault": true,
      "MessageQueue": true,
      "ExternalAPIs": false
    }
  },
  "Security": {
    "RequireHttps": true,
    "EnableCors": true,
    "AllowedOrigins": "${CORS_ALLOWED_ORIGINS:https://smartalarm.app}",
    "EnableRateLimiting": true,
    "RateLimitPerMinute": "${RATE_LIMIT_PER_MINUTE:100}"
  }
}
