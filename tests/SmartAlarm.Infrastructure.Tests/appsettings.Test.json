{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=smartalarm_test;Username=postgres;Password=postgres",
    "Redis": "localhost:6379",
    "MinIO": "localhost:9000",
    "RabbitMQ": "amqp://guest:guest@localhost:5672"
  },
  "TestContainers": {
    "PostgreSQL": {
      "Image": "postgres:15-alpine",
      "Database": "smartalarm_test",
      "Username": "postgres",
      "Password": "postgres",
      "Port": 5432
    },
    "Redis": {
      "Image": "redis:7-alpine",
      "Port": 6379
    },
    "MinIO": {
      "Image": "minio/minio",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
      "Port": 9000,
      "ConsolePort": 9001
    },
    "RabbitMQ": {
      "Image": "rabbitmq:3-management-alpine",
      "Username": "guest",
      "Password": "guest",
      "Port": 5672,
      "ManagementPort": 15672
    },
    "Vault": {
      "Image": "vault:latest",
      "Token": "myroot",
      "Port": 8200
    }
  },
  "TestSettings": {
    "UseTestContainers": true,
    "SkipExternalServices": false,
    "TestTimeout": 30000,
    "MaxRetries": 3
  }
}
