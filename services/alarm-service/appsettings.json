{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresDb": "Host=localhost;Port=5432;Database=smartalarm_dev;Username=postgres;Password=postgres123",
    "OracleDb": ""
  },
  "Observability": {
    "ServiceName": "SmartAlarm.AlarmService",
    "Environment": "Development",
    "Tracing": {
      "Enabled": true,
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      }
    },
    "Metrics": {
      "Enabled": true,
      "Console": {
        "Enabled": true
      },
      "Prometheus": {
        "Enabled": true
      }
    },
    "Logging": {
      "Enabled": true,
      "StructuredLogging": true,
      "IncludeScopes": true
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true
    },
    "Storage": {
      "Enabled": false
    },
    "KeyVault": {
      "Enabled": false
    },
    "MessageQueue": {
      "Enabled": true
    }
  },
  "AlarmService": {
    "TriggerCheckInterval": "00:01:00",
    "NotificationRetryAttempts": 3,
    "EnableBackgroundProcessing": true,
    "MaxConcurrentAlarms": 100
  }
}
