{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresDb": "Host=localhost;Port=5432;Database=smartalarm_dev;Username=postgres;Password=postgres123",
    "OracleDb": ""
  },
  "Observability": {
    "ServiceName": "SmartAlarm.AiService",
    "Environment": "Development",
    "Tracing": {
      "Enabled": true,
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      }
    },
    "Metrics": {
      "Enabled": true,
      "Console": {
        "Enabled": true
      },
      "Prometheus": {
        "Enabled": true
      }
    },
    "Logging": {
      "Enabled": true,
      "StructuredLogging": true,
      "IncludeScopes": true
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true
    },
    "Storage": {
      "Enabled": false
    },
    "KeyVault": {
      "Enabled": false
    },
    "MessageQueue": {
      "Enabled": false
    }
  },
  "AiService": {
    "ModelPath": "./models/",
    "EnableModelTraining": true,
    "RecommendationEngine": {
      "Enabled": true,
      "MaxRecommendations": 10,
      "ConfidenceThreshold": 0.7
    }
  },
  "MachineLearning": {
    "ModelsPath": "./models/",
    "EnableTraining": true,
    "MinimumDataPoints": 5,
    "RetrainInterval": "24:00:00",
    "ModelCacheTimeout": "01:00:00"
  }
}
