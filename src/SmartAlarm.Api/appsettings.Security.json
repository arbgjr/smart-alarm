{
  "SecurityHeaders": {
    "XFrameOptions": "DENY",
    "StrictTransportSecurity": "max-age=31536000; includeSubDomains; preload",
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: ws:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'",
    "ReferrerPolicy": "strict-origin-when-cross-origin",
    "PermissionsPolicy": "camera=(), microphone=(), geolocation=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:5173"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS",
      "PATCH"
    ],
    "AllowedHeaders": [
      "Authorization",
      "Content-Type",
      "Accept",
      "Origin",
      "X-Requested-With",
      "X-Correlation-ID",
      "X-Client-Version"
    ],
    "ExposedHeaders": [
      "X-Correlation-ID",
      "X-RateLimit-Remaining",
      "X-RateLimit-Reset",
      "X-Total-Count"
    ],
    "AllowCredentials": true,
    "PreflightMaxAgeMinutes": 30,
    "AllowDevelopmentOrigins": true,
    "AdminAllowedOrigins": [
      "https://admin.smartalarm.com"
    ]
  },
  "RateLimit": {
    "Global": {
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000,
      "EnableIpBlocking": true,
      "BlockDuration": "00:15:00"
    },
    "Security": {
      "LoginAttemptsPerMinute": 5,
      "LoginAttemptsPerHour": 20,
      "LoginBlockDuration": "00:30:00",
      "PasswordResetAttemptsPerHour": 3,
      "RegistrationAttemptsPerHour": 10
    },
    "Endpoints": {
      "/api/auth/login": {
        "RequestsPerMinute": 10,
        "RequestsPerHour": 50,
        "RequestsPerDay": 200,
        "EnableBurstProtection": true,
        "BurstLimit": 3
      },
      "/api/auth/register": {
        "RequestsPerMinute": 5,
        "RequestsPerHour": 20,
        "RequestsPerDay": 100,
        "EnableBurstProtection": true,
        "BurstLimit": 2
      },
      "/api/alarms": {
        "RequestsPerMinute": 60,
        "RequestsPerHour": 1000,
        "RequestsPerDay": 10000,
        "EnableBurstProtection": true,
        "BurstLimit": 10
      },
      "/api/users/profile": {
        "RequestsPerMinute": 30,
        "RequestsPerHour": 500,
        "RequestsPerDay": 2000,
        "EnableBurstProtection": false,
        "BurstLimit": 5
      }
    }
  }
}
