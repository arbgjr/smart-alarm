{
  "Observability": {
    "Environment": "Production",
    "Logging": {
      "Level": "Information",
      "FilePath": "logs/smartalarm-api-.log"
    },
    "Tracing": {
      "SamplingRatio": 1.0,
      "Console": {
        "Enabled": false
      },
      "Otlp": {
        "Enabled": true,
        "Endpoint": "http://jaeger:4317"
      },
      "Jaeger": {
        "Enabled": true,
        "AgentHost": "jaeger",
        "AgentPort": 6831
      }
    },
    "Metrics": {
      "Console": {
        "Enabled": false
      },
      "Prometheus": {
        "Enabled": true,
        "Endpoint": "/metrics"
      }
    }
  }
}
