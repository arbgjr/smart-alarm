{
    "inputs": [
		{
			"type": "promptString",
			"id": "codacy_account_token",
            "description": "Codacity Account Token",
            "password": true
		},
		{
			"type": "promptString",
			"id": "credentials_path",
			"description": "Path to .gdrive-server-credentials.json file",
			"default": "/mnt/c/Users/arman/OneDrive/Documents/gcp-oauth.keys.json"
		},
        {
            "id": "github_token",
            "type": "promptString",
            "description": "GitHub Personal Access Token",
            "password": true
        },
		{
			"id": "memory_file_path",
			"type": "promptString",
			"description": "Path to the memory storage file",
			"password": false
		},
        {
            "id": "everai_token",
            "type": "promptString",
            "description": "Ever.AI Personal Access Token",
            "password": true
        }
    ],
    "servers": {
        "everai-mcp": {
            "url": "http://10.80.47.6:5001/sse",
            "headers" : {
                "x-everai-api-key": "${input:everai_token}",
                "x-everai-llm-prompt": "<seu-prompt-personalizado>",
                "x-everai-llm-model": "gpt-4-1-mini",
                "x-everai-llm-family": "openai",
                "x-everai-etl-results": "10",
                "x-everai-etl-kb": "DocAgent",
                "x-everai-etl-theme": "B28S - 2025-07-29 16:53:16.754",
                "x-everai-mcp-mode": "rag"
            }
        },
		"filesystem": {
			"command": "npx",
			"args": ["-y","@modelcontextprotocol/server-filesystem","${workspaceFolder}"],
			"type": "stdio"
		},
		"git": {
			"command": "uvx",
			"args": ["mcp-server-git"],
			"type": "stdio"
		},
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
            }
        },
        "memory": {
			"type": "stdio",
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-memory"],
			"env": {
				"MEMORY_FILE_PATH": "${input:memory_file_path}"
			}
        },
        "sequentialthinking": {
			"type": "stdio",
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
        },
		"time": {
			"command": "uvx",
			"args": ["mcp-server-time","--local-timezone","America/Sao_Paulo"],
			"type": "stdio"
		},
        "everything": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-everything"]
        },
		"gdrive": {
			"command": "npx",
			"args": ["-y","@modelcontextprotocol/server-gdrive"],
			"env": {
				"GDRIVE_CREDENTIALS_PATH": "${input:credentials_path}"
			},
			"type": "stdio"
		},
		"fetch": {
			"command": "uvx",
			"args": ["mcp-server-fetch"],
			"type": "stdio"
		},
		"Azure MCP Server": {
			"command": "npx",
			"args": ["-y","@azure/mcp@latest","server","start"],
			"type": "stdio"
		},
		"calculator": {
			"command": "uvx",
			"args": ["mcp-server-calculator"],
			"type": "stdio"
		},
		"mcp-compass": {
			"command": "npx",
			"args": ["-y","@liuyoshio/mcp-compass"],
			"type": "stdio"
		},
		"windows-cli": {
			"command": "npx",
			"args": ["-y","@simonb97/server-win-cli","--config","/mnt/c/Users/arman/win-cli-mcp-config.json"],
			"type": "stdio"
		},
		"mcp-server-code-runner": {
			"command": "npx",
			"args": ["-y","mcp-server-code-runner@latest"],
			"type": "stdio"
		},
		"context7": {
			"command": "npx",
			"args": ["-y","@upstash/context7-mcp@latest"],
			"type": "stdio"
		},
		"microsoft-docs": {
			"type": "http",
			"url": "https://learn.microsoft.com/api/mcp"
		},
		"markitdown": {
			"type": "stdio",
			"command": "uvx",
			"args": ["markitdown-mcp"]
		},
		"figma": {
			"url": "http://127.0.0.1:3845/sse",
			"type": "http"
		},
		"playwright": {
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			],
			"type": "stdio"
		},
		"codacy": {
			"command": "npx",
			"args": [
				"-y",
				"@codacy/codacy-mcp"
			],
			"env": {
				"CODACY_ACCOUNT_TOKEN": "${input:codacy_account_token}"
			}
		}
    }
}
