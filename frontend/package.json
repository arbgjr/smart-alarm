{
  "name": "smart-alarm-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:responsive": "playwright test tests/e2e/responsive-comprehensive.spec.ts",
    "test:e2e:loading": "playwright test tests/e2e/loading-states-responsive.spec.ts",
    "test:e2e:navigation": "playwright test tests/e2e/component-navigation.spec.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:e2e:alarms": "playwright test tests/e2e/alarms.spec.ts",
    "test:e2e:ml": "playwright test tests/e2e/ml-insights.spec.ts",
    "test:e2e:docker": "docker-compose -f docker-compose.test.yml up -d && npm run test:e2e && docker-compose -f docker-compose.test.yml down",
    "test:e2e:ci": "playwright test --reporter=json --output-dir=test-results/artifacts",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:performance": "powershell -ExecutionPolicy Bypass -File tests/performance/run-performance-tests.ps1 -TestType load",
    "test:performance:load": "powershell -ExecutionPolicy Bypass -File tests/performance/run-performance-tests.ps1 -TestType load",
    "test:performance:stress": "powershell -ExecutionPolicy Bypass -File tests/performance/run-performance-tests.ps1 -TestType stress",
    "test:performance:spike": "powershell -ExecutionPolicy Bypass -File tests/performance/run-performance-tests.ps1 -TestType spike",
    "test:performance:all": "powershell -ExecutionPolicy Bypass -File tests/performance/run-performance-tests.ps1 -TestType all"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@microsoft/signalr": "^7.0.14",
    "@tanstack/react-query": "^4.32.0",
    "@tanstack/react-query-devtools": "^4.40.1",
    "axios": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^3.2.4",
    "lucide-react": "^0.534.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "tailwind-merge": "^3.3.1",
    "vite-plugin-pwa": "^1.1.0",
    "workbox-window": "^7.3.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.16",
    "@playwright/test": "^1.37.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-c8": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "playwright": "^1.37.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.0"
  }
}
